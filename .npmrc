# Use strict-ssl to ensure secure package downloads
strict-ssl=true

# Reduce npm log verbosity
loglevel=warn

# Set a timeout for npm operations
fetch-timeout=60000

# Set a single registry for all packages
registry=https://registry.npmjs.org/

# Don't save package-lock.json on package installation in CI/CD
package-lock=false

# Set a save prefix for package versions
save-prefix=^